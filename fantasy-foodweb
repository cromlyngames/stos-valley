    dictofherbivore = cull_weakest(dictofherbivore)
    dictofcarnivore = cull_weakest(dictofcarnivore)

    EntryCounters, CurrentNumberProducers,CurrentNumberHerbivores, CurrentNumberCarnivores, dictofproducer, dictofherbivore, dictofcarnivore = refill_foodweb(EntryCounters, CurrentNumberProducers,CurrentNumberHerbivores, CurrentNumberCarnivores,  dictofproducer, dictofherbivore, dictofcarnivore)

    dictofproducer, total_herbivore_energy, total_carnivore_energy = evaluate_producers(dictofproducer, total_herbivore_energy, total_carnivore_energy)
